<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MeetingRoom</title>
    @*    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MeetingRoom.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:400,700&amp;display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Kaushan+Script&amp;display=swap">
    <link rel="stylesheet" href="~/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/Hero-Clean-images.css">
</head>
@{
    var user = Context.Session.GetString("username");
    bool noSession = true;
    bool admin = false;
    bool normalUser;

    if (user == null)
    {
        noSession = false;
    }
    else
    {
        admin = user.Equals("admin");
        normalUser = user.Equals("user");
    }
}
<body>
    <header>

        <nav class="navbar navbar-dark navbar-expand-lg fixed-top bg-dark" id="mainNav">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="RoomDetails" asp-action="Index">MeetingRoom</a>
                <button data-bs-toggle="collapse" data-bs-target="#navbarResponsive" class="navbar-toggler navbar-toggler-right" type="button" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><i class="fa fa-bars"></i></button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ms-auto text-uppercase">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="RoomDetails" asp-action="Index" style="color: aliceblue !important">Home</a>
                        </li>
                        @if (noSession)
                        {
                            @if (admin)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="RoomDetails" asp-action="AddRooms" style="color: aliceblue !important">Add Rooms</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="RoomDetails" asp-action="ViewRooms" style="color: aliceblue !important">View/Edit Rooms</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="RoomStatus" asp-action="AssignRoom" style="color: aliceblue !important">Assign Rooms</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="RoomStatus" asp-action="ViewReport" style="color: aliceblue !important">Assign Rooms</a>
                                </li>
                            }
                            <li class="nav-item">
                                @if (!noSession)
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Index" style="color: aliceblue !important">Login</a>
                                }
                                else
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout" style="color: aliceblue !important">Logout</a>
                                }

                            </li>


                        }
                    </ul>
                </div>
            </div>
        </nav>




